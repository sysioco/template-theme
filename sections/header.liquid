<header class="h-20 px-5 flex items-center justify-between header">
  {% render 'header-logo' %}

  {% comment %} Navigation Menu {% endcomment %}
  <nav class="relative flex justify-between gap-10">
    {% for link in section.settings.menu.links %}
      {% if link.links != blank %}
        <div id="menu-item">
          <a href="{{ link.url }}" class="font-bold">{{ link.title | escape }}</a>
          <div id="dropdown-menu" class="absolute top-[52px] p-5 bg-white border hidden">
            <ul class="flex flex-col gap-5">
              {% for childlink in link.links %}
                <li>
                  <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      {% else %}
        <a href="{{ link.url }}" class="font-bold">{{ link.title | escape }}</a>
      {% endif %}
    {% endfor %}
  </nav>

  {% comment %} Navigation Quick Links {% endcomment %}
  <div class="flex align-item gap-1">
    {% render 'header-search' %}
    {% render 'header-account' %}
    {% render 'header-cart' %}
  </div>
</header>

<div id="search-bar"></div>


{% schema %}
  {
    "name": "t:settings_schema.sections.header.name",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Heading Navigation Menu"
      },
      {
        "type": "select",
        "id": "header_nav_type",
        "label": "Select the type of navigation to display",
        "default": "megamenu",
        "info": "Toggle between megamenu and burger menu",
        "options": [
          {
            "value": "megamenu",
            "label": "Mega Menu"
          },
          {
            "value": "burger menu",
            "label": "Burger Menu"
          }
        ]
      }
    ]
  }
{% endschema %}