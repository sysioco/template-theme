{% case media.media_type %}
  {% when 'image' %}
    <img
      src="{{ media | image_url: width: 480, height: 480 }}"
      alt="{{ media.preview_image.alt }}"
      height="480"
      width="480"
      loading="lazy"
    >
  {% when 'external_video' %}
    {{ media | external_video_tag: class: '' }}
  {% when 'video' %}
    {{ media | video_tag: controls: true, class: '' }}
  {% else %}
    {{ media | media_tag }}
{% endcase %}
